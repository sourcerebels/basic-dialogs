<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_alert_dialog" />

    <Button
        android:id="@+id/btn_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_progress_dialog"/>
    
    <Button
        android:id="@+id/btn_user_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_user_input_dialog"/>

    <Button
        android:id="@+id/btn_confirm_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_confirmation_dialog" />

</LinearLayout>
